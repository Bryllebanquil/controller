{
  "manifest_version": 3,
  "name": "Trusted AutoSave Vault",
  "version": "1.0",
  "permissions": ["activeTab","scripting","storage"],
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["content.js"]
    }
  ]
}
